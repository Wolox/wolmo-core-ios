platform :ios, '12.0'

def testing_pods
    pod 'Quick'
    pod 'Nimble'
end

target 'WolmoCore' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for WolmoCore

  target 'WolmoCoreTests' do
    # Pods for testing
    testing_pods
  end

end

target 'WolmoCoreDemo' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for WolmoCoreDemo

end

